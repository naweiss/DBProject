<Window x:Class="DBProject.Travellers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBProject"
        mc:Ignorable="d"
        Title="Travellers" Height="300" Width="362.389">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="237*"/>
            <RowDefinition Height="32*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionMode="Single"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="button1" Content="Add Traveller" Margin="3" Click="button1_Click" Grid.Column="0"/>
            <Button x:Name="button2" Content="Delete Traveller" Margin="3" Click="button2_Click" Grid.Column="1"/>
            <Button x:Name="button3" Content="Update Traveller" Margin="3" Click="button3_Click" Grid.Column="2"/>
        </Grid>
    </Grid>
</Window>
